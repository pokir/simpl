# PRINTING

println {
  # Prints with a newline
  print!
  '\n' . print! @_
}


print_stack {
  stack_size! @ counter
  counter . duplicate!
  & {
    counter . 0 . <= ? {
      @_
      ^
    }
    @_

    println!
    @_

    counter . 1 . -
    @ counter
  }
}


# STACK MANIPULATION

pop {
  # Pops n number of items from the stack
  @ counter

  counter . stack_size! > ? {
    @_
    'tried to pop ' .
    counter . num_to_str!
    +
    ' items from the stack, but the stack only has ' .
    + 
    stack_size! num_to_str! 
    +
    ' items' .
    +
    panic!
  } @_

  & {
    counter .  0 . <= ? {
      @_         # remove the boolean result
      ^
    }
    @_           # remove the boolean result
    counter .  1 . -
    @ counter
  }
}


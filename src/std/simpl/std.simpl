is_str {
  type_of! 'str' . ==
}


is_num {
  type_of! 'num' . ==
}


is_bool {
  type_of! 'bool' . ==
}

is_func {
  type_of! 'func' . ==
}

# MATH

floor {
  is_num! F . == ? {
    @_
    "can't run floor because the argument is not a number" .
    panic!
  } @_

  1 . duplicate!
  1 . %
  -
}


ceil {
  is_num! F . == ? {
    @_
    "can't run ceil because the argument is not a number" .
    panic!
  } @_

  floor!
  1 . +
}


round {
  is_num! F . == ? {
    @_
    "can't run round because the argument is not a number" .
    panic!
  } @_

  0.5 . +
  floor!
}


pow {
  # TODO: allow fractional exponents
  @ exponent
  @ base

  exponent . is_num! F . == ? {
    @_
    "can't run pow because the exponent is not a number" .
    panic!
  } @_
  @_ # remove the exponent

  base . is_num! F . == ? {
    @_
    "can't run pow because the base is not a number" .
    panic!
  } @_
  @_ # remove the base

  exponent . @ counter

  1 .

  exponent . 0 . >= ? {
    @_
    & {
      counter . 0 . <= ? {
        @_
        ^
      }
      @_

      counter . 1 . - @ counter

      base . *
    }
    ->
  }
  @_
  
  exponent . 0 . < ? {
    @_

    counter . -1 . * @ counter

    & {
      counter . 0 . <= ? {
        @_
        ^
      }
      @_

      counter . 1 . - @ counter

      base . /
    }
    ->
  }
  @_
}
